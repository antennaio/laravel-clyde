{
    "name": "pherum/laravel-clyde",
    "description": "Image uploads and manipulation for Laravel, a wrapper around Glide",
    "keywords": ["laravel", "php", "images", "upload", "resize", "cache", "glide"],
    "license": "MIT",
    "homepage": "https://github.com/pherum/laravel-clyde",
    "require": {
        "illuminate/config": "^5.1",
        "illuminate/contracts": "^5.1",
        "illuminate/routing": "^5.1",
        "illuminate/support": "^5.1",
        "league/glide": "^1.0",
        "league/glide-symfony": "^1.0",
        "symfony/http-foundation": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0|^7.0",
        "orchestra/testbench": "~3.0",
        "mockery/mockery": "^0.9.4"
    },
    "authors": [
        {
            "name": "Kazik",
            "email": "antenna@antenna.io"
        }
    ],
    "autoload": {
        "psr-4": {
            "Antennaio\\Clyde\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Antennaio\\Clyde\\Test\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Antennaio\\Clyde\\ClydeServiceProvider"
            ],
            "aliases": {
                "ClydeUpload": "Antennaio\\Clyde\\Facades\\ClydeUpload",
                "ClydeImage": "Antennaio\\Clyde\\Facades\\ClydeImage"
            }
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
